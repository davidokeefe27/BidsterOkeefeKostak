        function displayAll(data){
            if(data){
                var len =data.length;
                var txt ="";
                if(len > 0){
                    for(var i=0;i<len;i++){
                        txt += "<thead><tr><td>"+String(data[i].title)
                            +"</td><td>"+String(data[i].description)
                            +"</td><td>"+String(data[i].offer)
                            +"</td><td>"+String(data[i].category)+"</td></tr></thead>";
                
                    }
                    if(txt != ""){
                        $("#table").append(txt).removeClass("hidden");
                    }
                }
            }
        }
        
    </script>
